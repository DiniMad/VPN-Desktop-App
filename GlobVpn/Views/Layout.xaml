<Page x:Class="GlobVpn.Views.Layout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlobVpn.Views"
      mc:Ignorable="d" 
      Title="Layout"
      d:DesignHeight="600"
      d:DesignWidth="1050"
      MinHeight="450"
      MinWidth="800">
    <Page.Resources>
        <ResourceDictionary Source="Resources/LayoutResources.xaml"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="22*"/>
            <ColumnDefinition
                Width="76*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill"
                            ImageSource="{StaticResource MainWindowBackground}"/>
        </Grid.Background>
        <Border Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="3"
                Margin="0 5 0 0"
                CornerRadius="0 80 0 0">
            <Border.Background>
                <LinearGradientBrush
                    EndPoint="0,0"
                    StartPoint=".8,0">
                    <GradientStop
                        Color="{DynamicResource PrimaryMenuLeft}"
                        Offset="1"/>
                    <GradientStop
                        Color="{DynamicResource PrimaryMenuRight}"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="8*"/>
                    <RowDefinition
                        Height="15*"/>
                    <RowDefinition
                        Height="50*"/>
                    <RowDefinition
                        Height="17*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="10*"/>
                    <ColumnDefinition
                        Width="80*"/>
                    <ColumnDefinition
                        Width="10*"/>
                </Grid.ColumnDefinitions>
                <Viewbox
                    Grid.Column="1"
                    Grid.Row="1">
                    <Border
                        Width="100"
                        Height="100"
                        CornerRadius="80,80,80,80"
                        BorderBrush="{StaticResource PinkDarkBrush}"
                        BorderThickness="4">
                        <Border.Background>
                            <ImageBrush
                                Stretch="UniformToFill"
                                ImageSource="{StaticResource UserAvatar}"/>
                        </Border.Background>
                    </Border>
                </Viewbox>
                <Viewbox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0 10 0 0">
                    <StackPanel
                        Width="100"
                        Height="170"
                        HorizontalAlignment="Center">
                        <TextBlock TextAlignment="Center"
                                   Foreground="{StaticResource Text}">
                            Welcome Samin
                        </TextBlock>
                        <Button
                            x:Name="ButtonHome"
                            Content="Home"
                            Click="ButtonHome_Click"
                            Tag="{StaticResource Home}"
                            Style="{DynamicResource MainManuButton}"
                            />
                        <Button Content="Edit Profile"
                                Tag="{StaticResource EditProfile}"
                            Style="{DynamicResource MainManuButton}"
                            />
                        <Button Content="Setting"
                                Tag="{StaticResource Setting}"
                            Style="{DynamicResource MainManuButton}"
                            />
                        <Button 
                            x:Name="ButtonFeedBack"
                            Content="FeedBack"
                            Click="ButtonFeedBack_Click"
                            Tag="{StaticResource FeedBack}"
                            Style="{DynamicResource MainManuButton}"
                            />
                        <Button Content="Info"
                                Tag="{StaticResource Info}"
                            Style="{DynamicResource MainManuButton}"
                            />
                        <Button Content="Logout"
                                Tag="{StaticResource Logout}"
                            Style="{DynamicResource MainManuButton}"
                            />
                    </StackPanel>
                </Viewbox>
                <Viewbox Grid.Row="3"
                         Grid.Column="1">
                    <Grid Height="100"
                          Width="100">
                        <Button 
                            x:Name="ButtonChangeTheme"
                            Margin="35" 
                            Tag="{DynamicResource Lamp}"
                            Click="ButtonChangeTheme_Click"
                            Style="{DynamicResource IconButton}"/>
                    </Grid>
                </Viewbox>
            </Grid>
        </Border>
        <Frame
            x:Name="FrameContent"
            x:FieldModifier="private"
            Grid.Column="1"/>
    </Grid>
</Page>
